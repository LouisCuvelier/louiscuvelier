{
  "name": "louiscuvelier",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "npm run gen:svgs && next build",
    "build:start": "next build && next start",
    "postbuild": "next-sitemap",
    "test": "",
    "start": "next start",
    "lint:js": "next lint",
    "lint:types": "tsc --noemit",
    "lint": "npm run lint:js && npm run lint:types",
    "lint:fix": "npx eslint --fix",
    "gen:svgs": "npx @svgr/cli --no-prettier --typescript --out-dir src/assets/svgs/__generated__ -- ./src/assets/svgs/source/**",
    "nuke": "rm -rf node_modules && rm -rf .next && rm -f package-lock.json",
    "prepare": "husky install && ggshield auth login",
    "scan:full": "ggshield secret scan repo ./ --exclude **/__generated__",
    "scan:pre-commit": "ggshield secret scan pre-commit",
    "scan:pre-push": "ggshield secret scan pre-push"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.{html,css,less,ejs}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "babel-plugin-react-compiler": "^19.0.0-beta-9ee70a1-20241017",
    "lucide-react": "^0.452.0",
    "next": "15.0.0-canary.200",
    "next-sitemap": "^4.2.3",
    "react": "19.0.0-rc-bf7e210c-20241017",
    "react-dom": "19.0.0-rc-bf7e210c-20241017"
  },
  "devDependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "clsx": "^2.1.1",
    "eslint": "^8",
    "eslint-config-next": "15.0.0-canary.200",
    "eslint-plugin-tailwindcss": "^3.17.0",
    "@svgr/cli": "^8.1.0",
    "@svgr/webpack": "^8.1.0",
    "husky": "^8.0.0",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.1",
    "tailwind-merge": "^2.3.0",
    "tailwind-variants": "^0.2.1",
    "tailwindcss": "^3.4.3",
    "tailwindcss-fluid-type": "^2.0.6",
    "tailwindcss-motion": "^0.3.0-beta",
    "typescript": "^5"
  }
}
